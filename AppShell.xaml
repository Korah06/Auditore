<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Auditore.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Auditore"
    Shell.FlyoutBehavior="Disabled"
    xmlns:viewmodels="clr-namespace:Auditore.ViewModels">

    <Shell.BindingContext>
        <viewmodels:ShellViewModel/>
    </Shell.BindingContext>
    
    <ShellContent 
        x:Name="loginPage"
        Route="Login" />

    <TabBar IsVisible="True">
        <Tab Title="Tasks">
            <ShellContent Route="Tasks"
                          x:Name="tasksPage"/>
        </Tab>
        <Tab Title="Chrono">
            <ShellContent Route="Chrono"
                          x:Name="chronoPage"/>
        </Tab>
        <Tab Title="Calendar">
            <ShellContent Route="Calendar"
                          x:Name="calendarPage"/>
        </Tab>
        <Tab Title="User">
            <ShellContent Route="Profile"
                          x:Name="profilePage"/>
        </Tab>
        <Tab Title="Admin" IsVisible="{Binding Admin}">
            <ShellContent Route="Admin"
                          x:Name="adminPage"/>
        </Tab>
    </TabBar>

</Shell>
