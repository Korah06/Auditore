<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Auditore.Views.Desktop.ChronoDesktop"
             xmlns:viewmodels="clr-namespace:Auditore.ViewModels"
             xmlns:models="clr-namespace:Auditore.Models"
             x:DataType="viewmodels:ChronosViewModel">
    <Grid ColumnDefinitions="*,*">
        <!--#region ChronoViewer -->
        <StackLayout Grid.Column="0">
            <Grid>
                <Label Text="Cronometros" 
                   FontSize="Medium" 
                   HorizontalOptions="Start"
                   Margin="10,0,0,0"/>
                <Button Text="Crear Crono"/>
            </Grid>
            <!--#region ChronoCollection -->
            <CollectionView>
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Span="2" Orientation="Vertical"/>
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame>
                            <VerticalStackLayout>
                                <Label Text=""/>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <!--#endregion-->
        </StackLayout>
        <!--#endregion-->
    </Grid>
</ContentPage>